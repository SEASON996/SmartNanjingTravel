<Window x:Class="SmartNanjingTravel.Views.FavoritesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:SmartNanjingTravel.Views"
        mc:Ignorable="d"
        Title="我的收藏" Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MaterialDesign.Brush.Background}">
    <Window.Resources>
        <Style x:Key="FavoriteCard" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource MaterialDesign.Brush.Surface}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource MaterialDesign.Brush.SurfaceVariant}"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource MaterialDesign.Brush.Primary}"/>
                    <Setter Property="BorderThickness" Value="1"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <Border Grid.Row="0" 
                Background="{DynamicResource MaterialDesign.Brush.Primary}"
                Padding="20,15"
                CornerRadius="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <materialDesign:PackIcon Grid.Column="0" 
                                         Kind="Star" 
                                         Width="32" 
                                         Height="32"
                                         Foreground="{DynamicResource MaterialDesign.Brush.OnPrimary}"
                                         Margin="0,0,15,0"/>

                <StackPanel Grid.Column="1">
                    <TextBlock Text="我的收藏" 
                               FontSize="24" 
                               FontWeight="Bold"
                               Foreground="{DynamicResource MaterialDesign.Brush.OnPrimary}"/>
                    <TextBlock Text="查看和管理您收藏的景点和路线" 
                               FontSize="12"
                               Foreground="{DynamicResource MaterialDesign.Brush.OnPrimary}"
                               Opacity="0.9"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <Button Grid.Column="2"
                        Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                        ToolTip="关闭">
                    <materialDesign:PackIcon Kind="Close" Width="20" Height="20"/>
                </Button>
            </Grid>
        </Border>

        <!-- 收藏列表 -->
        <ScrollViewer Grid.Row="1" Margin="15">
            <ItemsControl x:Name="FavoritesItemsControl">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource FavoriteCard}"
                                Width="180"
                                Height="180"
                                Tag="{Binding}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="100"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- 缩略图 -->
                                <Border Grid.Row="0" 
                                        Background="{DynamicResource MaterialDesign.Brush.SurfaceVariant}"
                                        CornerRadius="5">
                                    <Grid>
                                        <TextBlock Text="{Binding Type}"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   FontSize="16"
                                                   FontWeight="Bold"
                                                   Foreground="{DynamicResource MaterialDesign.Brush.OnSurfaceVariant}"/>
                                    </Grid>
                                </Border>

                                <!-- 信息 -->
                                <StackPanel Grid.Row="1" Margin="0,5,0,0">
                                    <TextBlock Text="{Binding Name}"
                                               FontSize="14"
                                               FontWeight="Bold"
                                               TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Text="{Binding Location}"
                                               FontSize="11"
                                               Foreground="{DynamicResource MaterialDesign.Brush.Secondary}"
                                               TextTrimming="CharacterEllipsis"
                                               Margin="0,2,0,0"/>
                                    <TextBlock Text="{Binding Description}"
                                               FontSize="11"
                                               TextTrimming="CharacterEllipsis"
                                               Margin="0,5,0,0"/>
                                </StackPanel>

                                <!-- 底部操作栏 -->
                                <StackPanel Grid.Row="2" 
                                            Orientation="Horizontal" 
                                            HorizontalAlignment="Right"
                                            Margin="0,5,0,0">
                                    <Button Style="{StaticResource MaterialDesignToolButton}"
                                            ToolTip="在地图上查看"
                                            Tag="{Binding}">
                                        <materialDesign:PackIcon Kind="MapMarker" Width="16" Height="16"/>
                                    </Button>
                                    <Button Style="{StaticResource MaterialDesignToolButton}"
                                            ToolTip="删除收藏"
                                            Tag="{Binding}"
                                            Margin="5,0,0,0">
                                        <materialDesign:PackIcon Kind="Delete" Width="16" Height="16"/>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- 空状态提示 -->
        <Border Grid.Row="1" 
                x:Name="EmptyStateBorder" 
                Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <materialDesign:PackIcon Kind="StarOutline" 
                                         Width="64" 
                                         Height="64"
                                         Foreground="{DynamicResource MaterialDesign.Brush.Secondary}"
                                         Margin="0,0,0,15"/>
                <TextBlock Text="暂无收藏"
                           FontSize="18"
                           FontWeight="Medium"
                           Foreground="{DynamicResource MaterialDesign.Brush.Secondary}"
                           Margin="0,0,0,5"/>
                <TextBlock Text="您还没有收藏任何景点或路线"
                           FontSize="14"
                           Foreground="{DynamicResource MaterialDesign.Brush.Secondary}"
                           Opacity="0.7"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>